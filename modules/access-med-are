#%Module1.0
source /opt/Modules/extensions/extensions.tcl
### Set this to the real path later
set-basedir -root __CONDA_BASE__/__APPS_SUBDIR__ -package __CONDA_INSTALL_BASENAME__ -version envs
inhibit-self-conflict
inhibit-base-envvar
inhibit-version-envvar

### Loads the conda/access-med module, but brings all squashfs into the container
module load singularity
module load conda/access-med

foreach sqshfs [ glob $::basedir/*sqsh ] {
    prepend-path CONTAINER_OVERLAY_PATH $sqshfs
}